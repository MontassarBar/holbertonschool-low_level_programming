CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: re
re: oclean all $(OBJ)

.PHONY: clean
clean:
	$(RM) $(wildcard *~) $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean: clean oclean
